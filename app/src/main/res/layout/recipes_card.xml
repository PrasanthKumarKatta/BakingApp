<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/recipes_cardview"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/recipes_cardview"
        android:layout_margin="5dp"
        android:elevation="4dp"
        android:orientation="vertical"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cake_img_id"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/recipes" />

            <LinearLayout
               style="@style/recipes_cardview"
                >

                <TextView
                    android:id="@+id/recipe_title_id"
                    style="@style/recipes_textview"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="Cake Title"
                    android:textStyle="bold"
                    android:textColor="#e416a3"
                    android:textSize="25sp" />
                <TextView
                    android:id="@+id/recipe_video_id"
                    style="@style/recipes_textview"
                    android:text="13 Videos"
                    android:textColor="#188e7c"
                    android:paddingStart="25dp"
                    android:paddingEnd="10dp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/video"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
