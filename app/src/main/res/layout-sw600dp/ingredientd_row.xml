<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    style="@style/recipes_cardview"
    android:background="#22ef48"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
        style="@style/recipes_cardview"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="251dp">

            <TextView
                android:id="@+id/textview_ingredients"
                style="@style/recipes_cardview"
                android:layout_width="171dp"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="172dp"
                android:layout_marginTop="8dp"
                android:padding="20dp"
                android:text="Steps"
                android:textColor="#e79c10"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textview_quantity"
                style="@style/recipes_cardview"
                android:layout_width="174dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginEnd="168dp"
                android:layout_marginTop="8dp"
                android:padding="20dp"
                android:text="Steps"
                android:textColor="#ec0fd8"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_ingredients" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="192dp"
                android:layout_height="68dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Ingredient Name   : "
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/textview_ingredients"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="195dp"
                android:layout_height="65dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Measurement       :"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textview_mesurement"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textview_mesurement"
                style="@style/recipes_cardview"
                android:layout_width="170dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:layout_marginEnd="172dp"
                android:layout_marginTop="8dp"
                android:padding="20dp"
                android:text="Steps"
                android:textColor="#16bfba"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_quantity"
                app:layout_constraintVertical_bias="1.0" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="195dp"
                android:layout_height="63dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Quantity                  : "
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textview_quantity"
                app:layout_constraintEnd_toStartOf="@+id/textview_quantity"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.909" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>

